<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userFragment"
    tools:context="com.example.mgenty.mrrobot_android_project.mUser.UserFragment">

    <com.example.mgenty.mrrobot_android_project.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mUser.screen"
        android:id="@+id/userScreen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="74dp" />

    <com.example.mgenty.mrrobot_android_project.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="@string/mUser.name"
        android:id="@+id/userName"
        android:layout_below="@+id/userScreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp" />

    <com.example.mgenty.mrrobot_android_project.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="@string/email"
        android:id="@+id/userEmail"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
